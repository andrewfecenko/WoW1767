rm -rf $HOME/db2keystore;
mkdir $HOME/db2keystore; $HOME/sqllib/gskit/bin/gsk8capicmd_64 -fips true -keydb -create -db $HOME/db2keystore/keystore.p12 -pw YourStr0ngpaaxw0rD -strong -type pkcs12 -stash;
db2 update dbm cfg using keystore_type PKCS12 keystore_location $HOME/db2keystore/keystore.p12;
db2stop force;
db2start;